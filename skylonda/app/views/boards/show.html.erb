<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @board.user %>
</p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @board.date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @board.description %>
</p>

<p>
  <strong>Level:</strong>
  <%= @board.level %>
</p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Document</th>
      <th>Image</th>
      <th>Subject</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%@users.each do |user| %>
            <% if @board.user_id == user.id %>
              <h4><%= user.name %></h4>
            <% end %>
          <% end %>
        </td>
        <td><%= post.document %></td>
        <td><%= post.image %></td>
        <td><%= post.subject %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to "New Post", "/posts/new?board=#{@board.id}" %>
<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
</p>
