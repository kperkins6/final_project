<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%@users.each do |user| %>
    <% if @post.user_id == user.id %>
      <h4><%= user.name %></h4>
    <% end %>
  <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @board.date %>
</p>

<p>
  <strong>Description:   <%= @board.description %></strong>
</p>

<p>
  <strong>This Board Has Access Level: <%= @board.level %></strong>
</p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Document</th>
      <th>Image</th>
      <th>Subject</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%@users.each do |user| %>
            <% if @board.user_id == user.id %>
              <h4><%= user.name %></h4>
            <% end %>
          <% end %>
        </td>
        <td><%= post.document %></td>
        <td><%= post.image %></td>
        <td><%= post.subject %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to "New Post", "/posts/new?board=#{@board.id}" %>
<% if current_user.id == @board.user_id %>
  <%= link_to 'Edit', edit_board_path(@board) %> |
  <%= link_to 'Destroy', @board, method: :delete, data: { confirm: 'Are you sure?' } %>|
<% end %>
<%= link_to 'Back', boards_path %>
</p>
