<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td>
          <h3><%= link_to h(board.name), board_path(board.id) %></h3>
          <h4><%= board.posts.count %> Posts </h4>
            <br>
            <%= board.description %>
        </td>
        <td><h2>Created By: </h2>
          <%@users.each do |user| %>
            <% if board.user_id == user.id %>
              <h2><%= @user.name %></h2>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>
</div>
